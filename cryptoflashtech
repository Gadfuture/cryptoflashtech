  <script>
    const button = document.getElementById('generateButton');
    const timerText = document.getElementById('timerText');

    button.addEventListener('click', () => {
      let seconds = 10;
      timerText.innerText = `Generating Flash... ${seconds}s remaining`;
      const interval = setInterval(() => {
        seconds--;
        if (seconds > 0) {
          timerText.innerText = `Generating Flash... ${seconds}s remaining`;
        } else {
          clearInterval(interval);
          timerText.innerText = 'Flash ready. Contact us with your screenshot to proceed.';
        }
      }, 1000);
    });
  </script>
